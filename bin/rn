#!/usr/bin/env python3

import argparse
import os
import sys
from subprocess import run


class bcolors:
    HEADER = "\033[95m"
    OKBLUE = "\033[94m"
    OKCYAN = "\033[96m"
    OKGREEN = "\033[92m"
    WARNING = "\033[93m"
    FAIL = "\033[91m"
    ENDC = "\033[0m"
    BOLD = "\033[1m"
    UNDERLINE = "\033[4m"


def eprint(*args, **kwargs):
    print(*args, file=sys.stderr, **kwargs)


parser = argparse.ArgumentParser(description="Rename files with `sd`")
parser.add_argument(
    "find",
    metavar="FROM",
    help="search regex",
)
parser.add_argument(
    "replace",
    metavar="TO",
    help="replacement string",
)
parser.add_argument(
    "-y",
    "--yes",
    action="store_true",
    help="perform the rename without asking for confirmation",
)
args = parser.parse_args()

plan = {}
for filename in os.listdir():
    before = filename.strip()
    after = run(
        ["sd", args.find, args.replace],
        input=filename,
        check=True,
        text=True,
        capture_output=True,
    ).stdout.strip()
    if after != before:
        plan[before] = after

for before, after in plan.items():
    tty = sys.stderr.isatty()
    left = f"{bcolors.OKBLUE}{before}{bcolors.ENDC}" if tty else before
    right = f"{bcolors.OKCYAN}{after}{bcolors.ENDC}" if tty else after
    eprint(f"'{left}' => '{right}'")

if not args.yes:
    confirm = str(input("Proceed? (y/N): ")).lower().strip()
    if len(confirm) == 0 or confirm[0] != "y":
        exit(1)

for before, after in plan.items():
    os.rename(before, after)
